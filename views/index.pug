extends layout

block content
  header
    div(class='navbar navbar-dark bg-dark shadow-sm')
      div(class='container d-flex justify-content-between')
        a(href='#', class='navbar-brand d-flex align-items-center')
          svg(xmlns='http://www.w3.org/2000/svg', height='20', viewBox='0 0 24 24', width='20', stroke='currentColor', class='mr-2')
            path(d='M0 0h24v24H0z', fill='none')
            path(d='M13.49 5.48c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm-3.6 13.9l1-4.4 2.1 2v6h2v-7.5l-2.1-2 .6-3c1.3 1.5 3.3 2.5 5.5 2.5v-2c-1.9 0-3.5-1-4.3-2.4l-1-1.6c-.4-.6-1-1-1.7-1-.3 0-.5.1-.8.1l-5.2 2.2v4.7h2v-3.4l1.8-.7-1.6 8.1-4.9-1-.4 2 7 1.4z')
          strong La Micheline

  main(role='main')
    section(class='jumbotron text-center')
      div(class='container')
        h1 La cuisine en tempo
        p(class='lead text-muted') Des recettes et un chrono, faciles à réaliser et à la portée de tous. Pour se faire plaisir tous les jours !
        p
          a(href='#', class='btn btn-primary my-2') Les recettes
          | 
          |
          a(href='#', class='btn btn-secondary my-2') Le temps que j'ai

  div(class='container')
    div(class='row')
      each recipe, recipe_id in recipes
        div(class='col-md-4')
          div(class='card mb-4 shadow-sm')
              svg(class='bd-placeholder-img card-img-top', width='100%' height='225', xmlns='http://www.w3.org/2000/svg', preserveAspectRatio='xMidYMid slice', focusable='false', role='img', aria-label='Placeholder: Thumbnail')
                title Placeholder 
                rect(width='100%', height='100%', fill='#55595c')
                text(x='50%', y='50%', fill='#eceeef', dy='.3em') #{recipe.name}
              div(class='card-body')
                p(class='card-text') This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                div(class='d-flex justify-content-between align-items-center')
                  div(class='btn-group')
                    button(type='button', class='btn btn-sm btn-outline-secondary') View
                    button(type='button', class='btn btn-sm btn-outline-secondary') Edit
                
                  small(class='text-muted') 9 mins
    

  ul(class='list-group')
    each recipe, recipe_id in recipes
      li(class='list-group-item')
        a(href='/recipe/' + recipe_id) #{recipe.name}